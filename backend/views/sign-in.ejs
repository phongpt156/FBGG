<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">   
    <script src="/socket.io/socket.io.js"></script>
    <script src="jquery-3.1.1.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script>
        var socket = io("http://localhost:3000");

        socket.on("login_completd",function(data){
             window.location = "http://localhost:3000/";
        });

        socket.on("login_fail",function(data){
            alert('dang nhap lai');
        });

        $(document).ready(function() {
            $('#btn_login').click(function(event) {
                socket.emit("login",{mail:$('#mail').val(),password:$('#password').val()});
                /* Act on the event */
            });
        });
    </script>
</head>

<body >
    
    <input type="text" id="mail" placeholder="mail">
    <input type="text" id="password" placeholder="pass">
    <button id="btn_login">login</button>
    
</body>

</html>